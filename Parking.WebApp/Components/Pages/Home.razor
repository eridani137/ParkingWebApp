@page "/"


<div class="page-wrapper">
    <div class="parking-container">
        <div class="row top-row">
            @for (var i = 0; i < 7; i++)
            {
                var i1 = i;
                <div class="parking-spot" @onclick="() => OnSpotClick(i1)">
                    <div class="circle @(_spots[i].IsOccupied ? "occupied" : "free")"></div>
                </div>
            }
        </div>

        <div class="road"></div>

        <div class="row bottom-row">
            @for (var i = 7; i < 14; i++)
            {
                var i1 = i;
                <div class="parking-spot" @onclick="() => OnSpotClick(i1)">
                    <div class="circle @(_spots[i].IsOccupied ? "occupied" : "free")"></div>
                </div>
            }
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(_message))
{
    <div class="text-center mt-2">@_message</div>
}

@code {

    class Spot
    {
        public bool IsOccupied { get; set; }
    }

    readonly List<Spot> _spots = [];
    string? _message;

    protected override void OnInitialized()
    {
        var rnd = new Random();
        for (var i = 0; i < 14; i++)
        {
            _spots.Add(new Spot { IsOccupied = rnd.NextDouble() < 0.2 });
        }
    }

    void OnSpotClick(int idx)
    {
        _message = _spots[idx].IsOccupied
            ? $"Место {idx + 1} занято"
            : $"Место {idx + 1} свободно";
    }

}

<style>
    
    .page-wrapper {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        display: flex;
        justify-content: center; /* по горизонтали */
        align-items: center; /* по вертикали */
        background-color: #111; /* тёмный фон */
    }

    .parking-container {
        background-color: #222;
        border: 4px solid #fff; /* белая рамка */
        padding: 30px;
        box-sizing: border-box;
    }

    .row {
        display: flex;
        gap: 20px;
        justify-content: center;
    }

    .parking-spot {
        width: 80px;
        height: 160px;
        background-color: #1f1f1f;
        border-left: 3px solid #555;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }

    .parking-spot:first-child {
        border-left: none;
    }

    .road {
        height: 80px;
        margin: 20px auto;
        width: calc(7 * 80px + 6 * 20px);
        border-top: 4px dashed #888;
        border-bottom: 4px dashed #888;
        background-color: #2a2a2a;
    }

    .circle {
        width: 32px;
        height: 32px;
        border-radius: 50%;
    }

    .free {
        background-color: green;
    }

    .occupied {
        background-color: brown;
    }

    .message {
        margin-top: 25px;
        font-size: 1.5rem;
        color: #eee;
        text-align: center;
    }
</style>